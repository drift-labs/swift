FROM apache/kafka:latest
USER root
RUN apk update && apk add --no-cache nodejs npm
ENV PATH="/opt/kafka/bin:$PATH"
WORKDIR /app
COPY ts/package*.json ./
RUN npm install

COPY ts/tsconfig.json ./
COPY ts/src/ ./src/
RUN npm run build

RUN echo '#!/bin/bash\nnode /app/dist/cli.js "$@"' > /usr/local/bin/kafka-cli && chmod +x /usr/local/bin/kafka-cli
RUN echo '#!/bin/bash\nnode /app/dist/swift-fill-metrics.js "$@"' > /usr/local/bin/swift-fill-metrics && chmod +x /usr/local/bin/swift-fill-metrics

ENTRYPOINT ["/bin/bash"]
